# Variáveis de Ambiente - Backend MediApp

# Porta do servidor
PORT=3001

# Banco de dados PostgreSQL
DATABASE_URL="postgresql://usuario:senha@localhost:5432/mediapp?schema=public"

# JWT Secret (usar uma chave forte em produção)
JWT_SECRET="sua-chave-jwt-super-secreta-aqui-mude-em-producao"
JWT_EXPIRES_IN="24h"

# AWS S3 para armazenamento de arquivos
AWS_ACCESS_KEY_ID="sua-aws-access-key"
AWS_SECRET_ACCESS_KEY="sua-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="mediapp-files"

# Configurações de email (para notificações)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="seu-email@gmail.com"
SMTP_PASS="sua-senha-app"

# Ambiente de execução
NODE_ENV="development"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,mp3,wav,doc,docx"

# Configurações de segurança
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="sua-session-secret-super-forte"

# URLs do frontend (para CORS)
FRONTEND_URL="http://localhost:3000"
MOBILE_DEEP_LINK="mediapp://auth"