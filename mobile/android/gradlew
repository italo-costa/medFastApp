set -e

THIS_DIR=$(cd -P "$(dirname "$(readlink "${BASH_SOURCE[0]}" || echo "${BASH_SOURCE[0]}")")" && pwd)
REACT_NATIVE_ROOT=${1:-$THIS_DIR/../../node_modules/react-native}

cd "$REACT_NATIVE_ROOT" && ./gradlew :ReactAndroid:installArchives -Pjobs=1 -x lint -x test