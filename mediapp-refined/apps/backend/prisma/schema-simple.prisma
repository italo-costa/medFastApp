generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  crm           String   @unique
  specialty     String
  phone         String?
  isActive      Boolean  @default(true)
  passwordHash  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

model Patient {
  id               String   @id @default(cuid())
  name             String
  cpf              String   @unique
  birthDate        DateTime
  gender           String
  phone            String
  email            String?
  address          String
  emergencyContact String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("patients")
}