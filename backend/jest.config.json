{
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/**/*.test.js",
    "**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/database/seed.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": [
    "./tests/setup.js"
  ],
  "maxWorkers": 1,
  "forceExit": true,
  "testTimeout": 30000,
  "verbose": true
}