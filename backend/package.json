{
  "name": "mediapp-backend",
  "version": "1.0.0",
  "description": "API Backend para MediApp - Sistema de Prontuários Médicos",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "frontend": "node src/server-frontend.js",
    "prisma": "NODE_ENV=development node src/server-prisma.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:unit": "NODE_ENV=test jest tests/unit",
    "test:integration": "NODE_ENV=test jest tests/integration",
    "test:database": "NODE_ENV=test jest tests/database",
    "db:migrate": "prisma migrate dev",
    "db:migrate:test": "NODE_ENV=test prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "node src/database/seed.js",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "react:init": "npx create-next-app@latest mediapp-react --typescript --tailwind --eslint --app --src-dir --import-alias '@/*'",
    "react:dev": "cd mediapp-react && npm run dev"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "aws-sdk": "^2.1494.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.22.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
